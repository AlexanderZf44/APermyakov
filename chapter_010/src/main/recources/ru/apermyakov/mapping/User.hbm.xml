<hibernate-mapping>
    <class name="ru.apermyakov.mapping.user.User" table="users">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name"/>
        <property name="email" column="email"/>
        <property name="password" column="password"/>
    </class>
</hibernate-mapping>