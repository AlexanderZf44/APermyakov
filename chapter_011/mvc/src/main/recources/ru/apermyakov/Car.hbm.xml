<hibernate-mapping>
    <class name="ru.apermyakov.model.car.Car" table="car">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="make" column="make"/>
        <property name="model" column="model"/>
        <property name="year" column="year"/>
        <many-to-one name="engine"
                     column="engine_id"
                     class="ru.apermyakov.model.car.Engine"
                     lazy="false"
                     fetch="join"/>
        <many-to-one name="gearbox"
                     column="gearbox_id"
                     class="ru.apermyakov.model.car.Gearbox"
                     lazy="false"
                     fetch="join"/>
        <many-to-one name="transmission"
                     column="transmission_id"
                     class="ru.apermyakov.model.car.Transmission"
                     lazy="false"
                     fetch="join"/>
    </class>
</hibernate-mapping>